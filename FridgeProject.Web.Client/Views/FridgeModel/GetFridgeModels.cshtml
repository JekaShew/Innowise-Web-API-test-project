@{
    ViewBag.Title = "All Fridge Models";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<FridgeProject.Abstract.Data.FridgeModel>
<h2>Fridge Models</h2>

<button class="btn btn-outline-primary btn-sm font-weight-bold text-dark">
    @Html.ActionLink("Add New Fridge Model", "AddFridgeModel")
</button>
<table class="table text-center mt-3">
    <thead class="thead-light ">
        <tr>
            <th>
                Title
            </th>
            <th>
                Year
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                <button class="btn btn-outline-primary btn-sm ">
                    @Html.ActionLink("Edit", "UpdateFridgeModel", new { Id = item.Id }, new { @class = "font-weight-bold text-dark" })
                </button>   |

                <button class="btn btn-outline-primary btn-sm ">
                    @Html.ActionLink("Details", "GetFridgeModelById", new { Id = item.Id }, new { @class = "font-weight-bold text-dark" })
                </button>   |
  
                <button class="btn btn-outline-danger btn-sm font-weight-bold text-dark" onclick="ConfirmModal('@item.Id')">
                    Delete
                </button>
<td>
        </tr>
    }

</table>

<input type="hidden" id="selectedFridgeModel" />

<div class="modal" tabindex="-1" role="dialog" id="deletingFridgeModel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Deliting Fridge Model</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <h2>Are you shure ?</h2>
            </div>
            <div class="modal-footer">
                <button type="button" id="btnDeleteFridgeModel" class="btn btn-danger font-weight-bold text-dark" onclick=Delete()>
                    Yes, Delete
                </button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal" onclick=Back()>Back</button>
            </div>
        </div>
    </div>
</div>

<script>
    var Back = function () {
        $('#deletingFridgeModel').modal('hide');
    };

    var ConfirmModal = function (id) {
        $('#deletingFridgeModel').modal('show');
        $('#selectedFridgeModel').val(id);
    };

    var Delete = function () {
        let id = $('#selectedFridgeModel').val();
        window.location.href = ('/FridgeModel/Delete?Id=' + id );
    };

</script>