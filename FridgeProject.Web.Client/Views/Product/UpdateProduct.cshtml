@model FridgeProject.Abstract.Data.Product

@{
    ViewBag.Title = $"Update Product {Model.Title}";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Update Product</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <button class="btn btn-outline-primary btn-sm font-weight-bold text-dark ">
        @Html.ActionLink("Back to List", "All")
    </button>
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DefaultQuantity, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DefaultQuantity, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DefaultQuantity, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input  class="btn btn-outline-primary btn-sm font-weight-bold text-dark " type="submit" value="Update"  />
            </div>
        </div>
    </div>
}

