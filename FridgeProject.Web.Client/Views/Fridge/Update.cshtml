@model FridgeWithFridgeModels
@{
    ViewBag.Title = $"Update Fridge  {Model.Fridge.Title}";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Update Fridge</h2>
<form method="post" action="/Fridge/Update">
    <button class="btn btn-outline-primary btn-sm font-weight-bold text-dark ">
        <a class="font-weight-bold text-dark" href="/Fridge/TakeAll"> Back to Fridges </a>
    </button>
    <div class="form-horizontal w-75">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Fridge.Id)
        <div class="form-group">
            @Html.LabelFor(model => model.Fridge.Title, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Fridge.Title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Fridge.Title, "", new { @class = "text-danger" })
            </div>
        </div>
        @Html.HiddenFor(model => model.Fridge.FridgeProducts)
        <div class="form-group">
            @Html.LabelFor(model => model.Fridge.OwnerName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Fridge.OwnerName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Fridge.OwnerName, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Fridge.FridgeModel, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @{
                    Output.Write(
                    Html.DropDownListFor
                    (
                        model => model.FridgeModelId,
                        new SelectList(Model.FridgeModels.Select(m => new SelectListItem(m.Title, m.Id.ToString())), "Value", "Text"),
                        new { @class = "form-control" }
                    ));
                }
            </div>
            <input type="hidden" value=@Model.FridgeModels />
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input class="btn btn-outline-primary btn-sm font-weight-bold text-dark mr-4" type="submit" value="Update" />
            </div>
        </div>
    </div>
</form>

