@model FridgeProject.Abstract.Data.FridgeProduct

@{
    ViewBag.Title = "Add Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add Selected Prduct </h2>

@using(Html.BeginForm())
{
    @Html.AntiForgeryToken()
<table class="table text-center w-50">
    <thead class="thead-light">
        <tr>
            <th>
                Title
            </th>
            <th>
                Quantity
            </th>
            <th></th>
        </tr>
    </thead>

    <tr>
        <td>
            @Html.DisplayFor(modelItem => Model.Product.Title)
        </td>
        <td>
            <div class="d-flex flex-column justify-content-center" >
                @Html.DisplayFor(modelItem => Model.Quantity)
                <div class="col-md-5 justify-content-end ">
                    @Html.EditorFor(model => Model.Quantity, new { htmlAttributes = new { @class = "form-control " } })
                    @Html.ValidationMessageFor(model => Model.Quantity, "", new { @class = "text-danger" })
                </div>
            </div>
           
        </td>

    </tr>
</table>  
    <input class="btn btn-outline-primary btn-sm font-weight-bold text-dark" type="submit" value="Add Product to Fridge" />
}
